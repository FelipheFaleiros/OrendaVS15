@model IEnumerable<Orenda.Models.Fornecedores>

<div class="midde_cont">
    <div class="container-fluid">
        <div class="row column_title">
            <div class="col-md-12">
                <div class="page_title">
                    <h2>Relatórios</h2>
                </div>
            </div>
        </div>
        <!-- row -->
        <div class="row">
            <!-- table section -->
            <!-- table section -->
            <div class="col-md-12">
                <div class="white_shd full margin_bottom_30">
                    <div class="full graph_head">
                        <div class="heading1 margin_0">
                            <h2>Relatório dos Fornecedores</h2>
                        </div>
                    </div>
                    <div class="table_section padding_infor_info">
                        <div class="table-responsive-sm">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th style="text-align:center;">#</th>
                                        <th style="text-align:center;">Fornecedor</th>
                                        <th style="text-align:center;">CNPJ</th>
                                        <th style="text-align:center;">Endereço</th>
                                        <th style="text-align:center;">Tempo Médio de entrega</th>
                                        <th style="text-align:center;">Editar</th>
                                        <th style="text-align:center;">Excluir</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td style="text-align:center;">@item.CodFornecedor</td>
                                            <td style="text-align:center;">@item.Nome</td>
                                            <td style="text-align:center;">@item.CNPJ</td>
                                            <td style="text-align:center;">@item.Endereco</td>
                                            <td style="text-align:center;">@item.Tempo</td>
                                            <td style="text-align:center;">
                                                <button id="btn_alterar" class="btn btn-success btn-sm rounded-0" type="button" data-toggle="tooltip" data-placement="top" title="Editar"><i class="fa fa-edit"></i></button>
                                            </td>
                                            <td style="text-align:center;">
                                                <button id="btn_excluir" class="btn btn-danger btn-sm rounded-0" type="button" onclick="DeletarFornecedor(@item.CodFornecedor)" data-toggle="tooltip" data-placement="top"  title="Deletar"><i class="fa fa-trash"></i></button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>